<div class="wrapper fadeInDown">
    <div id="formContent">
        <!-- Tabs Titles -->

        <!-- Icon -->
        <div class="fadeIn first">
            <img src="http://danielzawadzki.com/codepen/01/icon.svg" id="icon" alt="User Icon" />
        </div>

        <!-- Login Form -->
        <form action="/users/login" method="POST">
            <input type="text" id="login" class="fadeIn second my-5 w-50" style="height: 50px;" name="email" placeholder="login">
            <input type="text" id="password" class="fadeIn third my-5 w-50" style="height: 50px;" name="password" placeholder="password">
            <button class="btn btn-lg btn-primary btn-block text-uppercase" type="submit">Login</button>
        </form>

        <!-- Remind Passowrd -->
        <div id="formFooter">
            <a class="underlineHover" href="#">Forgot Password?</a>
        </div>

    </div>
</div>